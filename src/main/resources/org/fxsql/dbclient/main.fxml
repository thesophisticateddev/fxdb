<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.ToggleSwitch?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import org.fxsql.dbclient.components.AppMenuBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.control.TableView?>
<?import org.fxsql.dbclient.components.CircularButton?>
<?import javafx.scene.control.SplitPane?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.fxsql.dbclient.MainController">

    <AppMenuBar/>
    <VBox>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <Label fx:id="welcomeText"/>
        <Button text="Refresh!" onAction="#onRefreshData"/>
        <ToggleSwitch text="Dark Theme" fx:id="themeToggle"/>
    </VBox>
    <HBox VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>

        <SplitPane fx:id="mainSplitPane" HBox.hgrow="ALWAYS" >
            <VBox HBox.hgrow="NEVER" prefWidth="300" maxWidth="400">
                <TreeView fx:id="tableBrowser" />
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
                <TableView fx:id="tableView" />
                <HBox>
                    <CircularButton fx:id="pageDown" />
                    <CircularButton fx:id="pageUp" />
                </HBox>
            </VBox>
        </SplitPane>

    </HBox>
    <HBox>

    </HBox>
</VBox>
